<h1> All your spent cash</h1>

<p>
  <a href="/transactions/new">New Spend</a>
</p>

<table>
  
  <tr>
    <th>date</th>
    <th></th>
    <th>amount</th>
    <th></th>
    <th>merchant</th>
    <th></th>
    <th>type</th>
  </tr>

  <% for transaction in @transactions %>
  <tr>
    <td> <%= transaction.date %> </td>
    <td>|</td>
    <td> <%= transaction.amount %> </td>
    <td>|</td>
    <td> <%= transaction.merchant.merchant_name %></td>
    <td>|</td>
    <td> <%= transaction.tag.tag_name %> </td>
    <td>|</td>
    <td>
    <form action="/transactions/<%= transaction.id %>/delete" method="POST">
    <input type="submit" value="Delete" />
    </td>
    </tr>
    <% end %>

  </table>

<h2> Your total spending so far is :</h2>

<% sum = 0  %>
<% for transaction in @transactions %>
<%  sum += transaction.amount %>
<% end %>
<%= sum %>

